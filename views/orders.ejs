<%- include('partials/header') %>

<div class="jumbotron text-center" style="background-color: #f56368; padding: 50px;">
  <div class="container">
    <h1 class="display-3" style="color: #fff; font-size: 3rem; margin-bottom: 20px;">Order</h1>
    
    <!-- Featured recipes section -->
    <div class="row mt-5">
      <div class="col-md-4" style="border-radius: 20px;">
        <div class="card" style="border-radius: 20px; border: none; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);">
          <img src="https://img.freepik.com/free-photo/fresh-pasta-with-hearty-bolognese-parmesan-cheese-generated-by-ai_188544-9469.jpg" style="border-radius: 20px 20px 0 0;" class="card-img-top" alt="Recipe 1">
          <div class="card-body">
            <h5 class="card-title" style="color: #ed1c24; font-size: 1.5rem; font-weight: bold;">Specialty Dish</h5>
            <p class="card-text" style="color: #343a40;">Our signature Specialty Dish - Order here</p>
            <a href="#" class="btn btn-danger" style="background-color: #ed1c24; border-color: #ed1c24;">Price: $999</a>
          </div>
        </div>
      </div>
      <div class="col-md-4" style="border-radius: 20px;">
        <div class="card" style="border-radius: 20px; border: none; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);">
          <img src="https://img.freepik.com/free-photo/exploding-burger-with-vegetables-melted-cheese-black-background-generative-ai_157027-1734.jpg" style="border-radius: 20px 20px 0 0;" class="card-img-top" alt="Recipe 2">
          <div class="card-body">
            <h5 class="card-title" style="color: #ed1c24; font-size: 1.5rem; font-weight: bold;">Signature Dessert</h5>
            <p class="card-text" style="color: #343a40;">Our signature dessert - Order here</p>
            <a href="#" class="btn btn-danger" style="background-color: #ed1c24; border-color: #ed1c24;">Price: $499</a>
          </div>
        </div>
      </div>
      <div class="col-md-4" style="border-radius: 20px;">
        <div class="card" style="border-radius: 20px; border: none; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);">
          <img src="https://c4.wallpaperflare.com/wallpaper/234/543/684/food-pizza-wallpaper-preview.jpg" style="border-radius: 20px 20px 0 0;" class="card-img-top" alt="Recipe 3">
          <div class="card-body">
            <h5 class="card-title" style="color: #ed1c24; font-size: 1.5rem; font-weight: bold;">Healthy Delight</h5>
            <p class="card-text" style="color: #343a40;">Our signature Healthy Delight - Order here</p>
            <a href="#" class="btn btn-danger" style="background-color: #ed1c24; border-color: #ed1c24;">Price: $1999</a>
          </div>
        </div>
      </div>
    </div>
    <!-- End of featured recipes section -->

    <!-- Add the new form for submitting feedback, image, and text file -->
    <form action="/feedback" method="post" enctype="multipart/form-data" class="mt-4">
      <h5 class="lead" style="color: #fff; font-size: 1.5rem;">Share your feedback.</h5>
      <div class="form-group">
        <label for="orderId" style="color: #fff;">Order ID:</label>
        <input type="string" id="orderId" name="orderId" required class="form-control">
      </div>
      <div class="form-group">
        <label for="rating" style="color: #fff;">Feedback (1 to 5):</label>
        <input type="number" id="rating" name="rating" min="1" max="5" required class="form-control">
      </div>
      <div class="form-group">
        <label for="image" style="color: #fff;">Upload Image:</label>
        <input type="file" id="image" name="image" class="form-control">
      </div>
      <div class="form-group">
        <label for="textFile" style="color: #fff;">Upload Text File:</label>
        <input type="file" id="textFile" name="textFile" class="form-control">
      </div>
      <button type="submit" class="btn btn-light btn-lg btn-block" style="background-color: #fff; color: #ed1c24;">Submit files</button>
    </form>
    <!-- End of the new form -->

    <div class="row mt-4">
      <div class="col-md-6 mb-3">
        <a class="btn btn-light btn-lg btn-block" href="/track-order" role="button" style="color: #ed1c24;">Track Order</a>
      </div>
      <div class="col-md-6 mb-3">
        <a class="btn btn-light btn-lg btn-block" href="/logout" role="button" style="color: #ed1c24;">Log Out</a>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
